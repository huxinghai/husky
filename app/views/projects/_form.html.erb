<%= form_for @project, html: {class: "form form_new_project"} do |f| %>
  <%= form_error_messages(@project) %>
  <div class="form-group">
    <label>分类</label>
    <%=f.select :category_id, options_from_collection_for_select(Category.root, :id, :name), {}, class: 'form-control validate[required] category_id' %>
  </div>
  <div class="form-group">
    <label>标题</label>
    <%=f.text_field :name,  class: 'form-control title validate[required]', placeholder: "项目标题" %>
  </div>
  <div class="form-group">
    <label>描述</label>
    <%=f.text_area :description, class: "description validate[required]", id: "project_description" %>
  </div>

  <div class="form-group">
    <div role="tabpanel">
      <input type="hidden" name="project[price_type]" value="0" />
      <!-- Nav tabs -->
      <ul class="nav nav-tabs price_type" role="tablist">
        <li role="presentation" class="active">
          <a href="#fixed_price" aria-controls="home" role="tab" data-toggle="tab">固定价格需求</a>
          <span class='fa fa-check chose-icon'></span>
        </li>
        <li role="presentation">
          <a href="#hours_price" aria-controls="profile" role="tab" data-toggle="tab">时薪计算</a>
          <span class='fa fa-check chose-icon'></span>
        </li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane fixed_price active" id="fixed_price">    
          <p>
            <div class="input-group">
              <div class="input-group-addon">总金额</div>
              <%=f.text_field :budget, class: "budget form-control", placeholder: "总金额" %>
              <div class="input-group-addon">RMB</div>
            </div>
          </p>        
        </div>
        <div role="tabpanel" class="tab-pane hours_price" id="hours_price">  
          <table class="table table-bordered add_items hide">
            <tbody></tbody>
          </table>

          <div class='wrap'>
            <div class="input-group bar">
              <div class="input-group-btn">
                <button type="button" class="btn btn-default dropdown-toggle btn_bar" data-toggle="dropdown" aria-expanded="false" data-selected="h">
                  1/<span class='content'>时</span><span class="caret"></span>
                </button>
                <ul class="dropdown-menu list" role="menu">
                  <li data-value="h"><a href="javascript:;">时</a></li>
                  <li data-value="d"><a href="javascript:;">天</a></li>
                  <li data-value="w"><a href="javascript:;">周</a></li>
                  <li data-value="m"><a href="javascript:;">月</a></li>
                  <li class="divider"></li>
                  <li data-value="u"><a href="javascript:;">不固定</a></li>
                </ul>
              </div>
              <input type='text' class='form-control validate[required]' placeholder='时薪' />
              <span class="input-group-addon">RMB</span>
            </div>
            <button class='btn btn-info btn_add' type='button'>添加</button>
          </div>       
        </div>
      </div>

    </div>
  </div>

  <div class="form-group">
    <div class='file_upload'>
      <button type='button' class='btn btn-default btn_upload'>
        <i class='fa fa-upload'></i>文件上传
      </button>
      <div class='qq'></div>
    </div>
    <div class='attachments'>
      <table class="table table-bordered hide">
        <tbody></tbody>
      </table>
    </div>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
<script type='template/javascript' class='row_hours_price'>
<tr>
  <td>
  </td>
  <td><i class='fa fa-yen'></i><span class='price'></span></td>
  <td class='operation'>
    <a href='javascript:;'><i class='fa fa-trash-o btn_trash'></i></a>
    <input type='hidden' class='type' />
    <input type='hidden' class='price' />
  </td>
</tr>
</script>