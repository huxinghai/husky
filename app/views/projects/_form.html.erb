<%= form_for @project, html: {class: "form form_new_project"} do |f| %>
  <%= form_error_messages(@project) %>
  <div class="form-group">
    <label>分类</label>
    <%=f.select :category_id, options_from_collection_for_select(Category.root, :id, :name), {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>标题</label>
    <%=f.text_field :name,  class: 'form-control', placeholder: "项目标题" %>
  </div>
  <div class="form-group">
    <label>描述</label>
    <%=f.text_area :description, class: "description" %>
  </div>

  <div class="form-group">
    <div role="tabpanel">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
          <a href="#fixed_price" aria-controls="home" role="tab" data-toggle="tab">固定价格需求</a>
        </li>
        <li role="presentation">
          <a href="#hours_price" aria-controls="profile" role="tab" data-toggle="tab">时薪计算</a>
        </li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane fixed_price active" id="fixed_price">    
          <p>
            <div class="input-group">
              <div class="input-group-addon">总金额</div>
              <%=f.text_field :budget, class: "budget form-control", placeholder: "总金额" %>
              <div class="input-group-addon">RMB</div>
            </div>
          </p>        
        </div>
        <div role="tabpanel" class="tab-pane hours_price" id="hours_price">
          <p>
            <span>完成时间</span>
            <select name='unit'>
              <option>日</option>  
              <option>周</option>  
              <option>月</option>
              <option>不固定</option>  
            </select>
            <input type='text' class='form-control' name='' />
          </p>
        </div>
      </div>

    </div>
  </div>

  <div class="form-group">
    <label class="">附件</label>
    <%= f.file_field :attachment_id %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
