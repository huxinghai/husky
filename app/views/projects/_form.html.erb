
<%= simple_form_for [@project], html: {class: "form-horizontal form_new_project"} do |f| %>
  <%= f.input :name, label: "项目名称" %>
  <%= f.association :category, label: "您需要什么工作", collection: Category.all %>
  <%= f.association :tags, label: "项目相关技能", collection: Tag.where(kind: "Skill") %>
  <%= f.input :description, label: "关于项目的详细描述" %>
  <%= f.input :budget, label: "您计划用多少预算" %>

  <%= f.input :bidding_dead_line, as: :date, label: "竞标结束时间" %>
  <%= f.input :dead_line, as: :date, label: "项目结束时间" %>

  <%= f.input :attachment_id, label: "附件", as: :file %>

  <%= f.button :submit %>
<% end %>