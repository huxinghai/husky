<div class='row row-offcanvas row-offcanvas-right user_panel'>
  <div class='col-xs-8'>
    <div class="panel panel-primary sign_in_wrap">
      <div class="panel-heading">
        <h3 class="panel-title">用户登陆</h3>
      </div>
      <div class="panel-body">
        <% if flash[:alert] %>
        <div class="alert alert-warning" role="alert">
          <%=flash[:alert] %>
        </div> 
        <% end %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'sign_in' }) do |f| %>
          <div><%= f.label :login, "用户名" %><br />
          <%= f.text_field :login, autofocus: true, tabindex: 1 %></div>

          <div><%= f.label :password, "密码" %><br />
            <%= f.password_field :password, autocomplete: "off", tabindex: 2 %></div>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me, tabindex: 3 %> 
              <label for="user_remember_me">记住密码</label>
            </div>
          <% end -%>

          <div><%= f.submit "登陆", tabindex: 4, class: 'btn btn-primary' %></div>
        <% end %>

        <%#= render "users/shared/links" %>
      </div>
    </div>
  </div>
  <div class='col-xs-4'>
    <%= render "users/right_panel" %>
  </div>
</div>